{
	"compilerOptions": {
		"rootDirs": ["."],
		"module": "ES2022",
		"moduleResolution": "Bundler",
    "target": "ES2015",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["DOM", "ESNext", "ES2022"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"jsx": "react-jsx"
	},
	"include": ["src"]
}
